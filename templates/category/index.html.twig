{% extends 'base.html.twig' %}
{% block body %}
<h1>Category list</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>
                <a href="{{ path('category_edit', {'id': category.id}) }}">Edit</a>
                <a href="{{ path('category_delete', {'id': category.id}) }}">Delete</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<a href="{{ path('category_create') }}">Create a new category</a>
{% endblock %}
