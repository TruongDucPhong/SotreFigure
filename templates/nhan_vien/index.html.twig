{% form_theme NhanVienForm 'bootstrap_4_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <h1>Register</h1>

    {{ form_start(NhanVienForm) }}
        {{ form_row(NhanVienForm.name) }}
        {{ form_row(NhanVienForm.username) }}
        {{ form_row(NhanVienForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(NhanVienForm.agreeTerms) }}

        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(NhanVienForm) }}
</div>
{% endblock %}
